
{
  "manifest_version": 3,
  "name": "ChatGPT Navigator",
  "version": "1.0",
  "description": "Navigate ChatGPT conversations with scroll controls and search functionality",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ]
}
