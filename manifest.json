{
  "manifest_version": 3,
  "name": "ChatGPT Single-Chat Navigator",
  "version": "1.0.0",
  "description": "Scroll to top/bottom and search within the current ChatGPT conversation.",
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}